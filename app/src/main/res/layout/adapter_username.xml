<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/app_primary"
            android:textSize="32sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/adapter_layout_margin"
            android:layout_marginBottom="@dimen/adapter_layout_margin"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/adapter_layout_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/url_icon"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginRight="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_world"/>
                <TextView
                    android:id="@+id/url_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/adapter_text_size"
                    android:textColor="@color/gray"/>
                <ImageView
                    android:id="@+id/url_status"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginLeft="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_unknown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/adapter_layout_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/facebook_icon"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginRight="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_facebook"/>
                <TextView
                    android:id="@+id/facebook_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/adapter_text_size"
                    android:textColor="@color/gray"/>
                <ImageView
                    android:id="@+id/facebook_status"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginLeft="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_unknown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/adapter_layout_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/twitter_icon"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginRight="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_twitter"/>
                <TextView
                    android:id="@+id/twitter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/adapter_text_size"
                    android:textColor="@color/gray"/>
                <ImageView
                    android:id="@+id/twitter_status"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginLeft="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_unknown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/adapter_layout_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/github_icon"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginRight="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_github"/>
                <TextView
                    android:id="@+id/github_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/adapter_text_size"
                    android:textColor="@color/gray"/>
                <ImageView
                    android:id="@+id/github_status"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginLeft="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_unknown"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/adapter_layout_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/linkedin_icon"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginRight="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_linkedin"/>
                <TextView
                    android:id="@+id/linkedin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/adapter_text_size"
                    android:textColor="@color/gray"/>
                <ImageView
                    android:id="@+id/linkedin_status"
                    android:layout_width="@dimen/adapter_icon_size"
                    android:layout_height="@dimen/adapter_icon_size"
                    android:layout_marginLeft="@dimen/adapter_icon_margin"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_unknown"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>